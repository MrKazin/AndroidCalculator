<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCFFF2">

    <EditText
        android:id="@+id/mainScreen"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:singleLine="true"
        android:layout_margin="5dp"
        android:gravity="center|left"
        android:textSize="25sp"
        android:background="@null"/>

    <EditText
        android:id="@+id/currentScreen"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:singleLine="true"
        android:layout_margin="10dp"
        android:gravity="center|right"
        android:textSize="45sp"
        android:background="@null"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/openbracket"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onOpenBracketClick"
            android:text="("
            android:textSize="18sp"
            android:layout_margin="2dp"
            android:backgroundTint="#009584"/>

        <Button
            android:id="@+id/closebracket"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onCLoseBracketClick"
            android:text=")"
            android:textSize="18sp"
            android:layout_margin="2dp"
            android:backgroundTint="#009584"/>

        <Button
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClearCLick"
            android:text="CE"
            android:textSize="18sp"
            android:layout_margin="2dp"
            android:backgroundTint="#B70000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/n7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            android:text="7"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:backgroundTint="#009584"/>

        <Button
            android:id="@+id/n8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            android:text="8"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:backgroundTint="#009584"/>

        <Button
            android:id="@+id/n9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            android:text="9"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:backgroundTint="#009584"/>

        <Button
            android:id="@+id/division"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onFunctionClick"
            android:text="/"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:backgroundTint="#009584"/>

        <Button
            android:id="@+id/backspace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onBackspaceCLick"
            android:text="\u232b"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:backgroundTint="#B70000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/n4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            android:text="4"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:backgroundTint="#009584"/>

        <Button
            android:id="@+id/n5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            android:text="5"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:backgroundTint="#009584"/>

        <Button
            android:id="@+id/n6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            android:text="6"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:backgroundTint="#009584"/>

        <Button
            android:id="@+id/multiplication"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onFunctionClick"
            android:text="*"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:backgroundTint="#009584"/>

        <Button
            android:id="@+id/signchange"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+/-"
            android:textSize="18sp"
            android:onClick="onSignChangeClick"
            android:layout_margin="2dp"
            android:backgroundTint="#009584"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/n1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            android:text="1"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:backgroundTint="#009584"/>

        <Button
            android:id="@+id/n2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            android:text="2"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:backgroundTint="#009584"/>

        <Button
            android:id="@+id/n3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            android:text="3"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:backgroundTint="#009584"/>

        <Button
            android:id="@+id/subtraction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onFunctionClick"
            android:text="-"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:backgroundTint="#009584"/>

        <Button
            android:id="@+id/todenominator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1/x"
            android:textSize="18sp"
            android:onClick="onDenominatorClick"
            android:layout_margin="2dp"
            android:backgroundTint="#009584"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onDotClick"
            android:text="."
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:backgroundTint="#009584"/>

        <Button
            android:id="@+id/n0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            android:text="0"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:backgroundTint="#009584"/>

        <Button
            android:id="@+id/equals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onEqualsClick"
            android:text="="
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:backgroundTint="#009584"/>

        <Button
            android:id="@+id/addition"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onFunctionClick"
            android:text="+"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:backgroundTint="#009584"/>

        <Button
            android:id="@+id/sqrt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="sqrt"
            android:textSize="16sp"
            android:onClick="onSqrt"
            android:layout_margin="2dp"
            android:backgroundTint="#009584"/>

    </LinearLayout>

</LinearLayout>